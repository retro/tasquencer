{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "nodenext",

    "rootDir": "./",
    "outDir": "build",
    "incremental": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true
  }
}
